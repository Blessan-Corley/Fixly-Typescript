/* Font is loaded via Next.js font optimization in layout.tsx */
@import "tailwindcss/base";
@import "tailwindcss/components";
@import "tailwindcss/utilities";

/* =============================================
   FIXLY - PROFESSIONAL THEME SYSTEM
   Tailwind v3 + Subtle Glass + Premium UX
============================================= */

:root {
  /* ========== LIGHT THEME (Professional & Subtle) ========== */
  --background: 0 0% 100%;
  --background-secondary: 210 20% 98%;
  --background-tertiary: 210 15% 96%;
  --surface: 210 20% 97%;
  --surface-elevated: 210 15% 95%;
  --surface-overlay: 0 0% 100%;
  --surface-glass: 210 20% 98%;
  
  --primary: 217 85% 55%; /* Professional blue - less saturated */
  --primary-foreground: 0 0% 100%;
  --accent: 142 65% 45%; /* Subtle green */
  --accent-foreground: 0 0% 100%;
  --warning: 38 85% 50%;
  --warning-foreground: 0 0% 0%;
  --error: 355 70% 50%;
  --error-foreground: 0 0% 100%;
  
  --text-primary: 218 25% 18%;
  --text-secondary: 216 12% 45%;
  --text-muted: 216 10% 60%;
  --text-inverse: 0 0% 100%;
  
  --border: 214 15% 88%;
  --border-subtle: 210 15% 94%;
  --border-glass: 214 15% 88%;
  --input: 214 15% 88%;
  --ring: 217 85% 55%;
  
  --muted: 210 15% 94%;
  --muted-foreground: 216 12% 45%;
  --popover: 0 0% 100%;
  --popover-foreground: 218 25% 18%;
  --card: 0 0% 100%;
  --card-foreground: 218 25% 18%;
  
  --radius: 8px;
}

/* ========== DARK THEME (Professional Dark) ========== */
.dark {
  /* Professional dark backgrounds */
  --background: 220 15% 10%;
  --background-secondary: 220 12% 15%;
  --background-tertiary: 220 10% 18%;
  --surface: 220 12% 16%;
  --surface-elevated: 220 10% 20%;
  --surface-overlay: 220 15% 12%;
  --surface-glass: 220 12% 16%;
  
  /* Professional accent colors */
  --primary: 217 80% 60%;
  --primary-foreground: 220 15% 10%;
  --accent: 142 60% 50%;
  --accent-foreground: 220 15% 10%;
  --warning: 38 80% 55%;
  --warning-foreground: 220 15% 10%;
  --error: 355 65% 55%;
  --error-foreground: 0 0% 100%;
  
  /* Professional text hierarchy */
  --text-primary: 210 20% 92%;
  --text-secondary: 216 10% 65%;
  --text-muted: 216 8% 50%;
  --text-inverse: 218 25% 18%;
  
  /* Subtle borders */
  --border: 220 15% 25%;
  --border-subtle: 220 12% 20%;
  --border-glass: 220 15% 25%;
  --input: 220 12% 22%;
  --ring: 217 80% 60%;
  
  /* Surfaces */
  --muted: 220 12% 20%;
  --muted-foreground: 216 10% 60%;
  --popover: 220 15% 12%;
  --popover-foreground: 210 20% 92%;
  --card: 220 12% 16%;
  --card-foreground: 210 20% 92%;
}

/* ========== SYSTEM PREFERENCE DARK MODE ========== */
@media (prefers-color-scheme: dark) {
  :root:not(.light) {
    --background: 220 15% 10%;
    --background-secondary: 220 12% 15%;
    --background-tertiary: 220 10% 18%;
    --surface: 220 12% 16%;
    --surface-elevated: 220 10% 20%;
    --surface-overlay: 220 15% 12%;
    --surface-glass: 220 12% 16%;
    
    --primary: 217 80% 60%;
    --primary-foreground: 220 15% 10%;
    --accent: 142 60% 50%;
    --accent-foreground: 220 15% 10%;
    --warning: 38 80% 55%;
    --warning-foreground: 220 15% 10%;
    --error: 355 65% 55%;
    --error-foreground: 0 0% 100%;
    
    --text-primary: 210 20% 92%;
    --text-secondary: 216 10% 65%;
    --text-muted: 216 8% 50%;
    --text-inverse: 218 25% 18%;
    
    --border: 220 15% 25%;
    --border-subtle: 220 12% 20%;
    --border-glass: 220 15% 25%;
    --input: 220 12% 22%;
    --ring: 217 80% 60%;
    
    --muted: 220 12% 20%;
    --muted-foreground: 216 10% 60%;
    --popover: 220 15% 12%;
    --popover-foreground: 210 20% 92%;
    --card: 220 12% 16%;
    --card-foreground: 210 20% 92%;
  }
}

/* ========== BASE STYLES ========== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  scroll-behavior: smooth;
}

body {
  min-height: 100vh;
  background: hsl(var(--background));
  color: hsl(var(--text-primary));
  font-feature-settings: 'rlig' 1, 'calt' 1;
  transition: all 0.3s ease;
  overflow-x: hidden;
  line-height: 1.6;
  letter-spacing: -0.01em;
}

/* ========== ENHANCED SCROLLBAR ========== */
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: hsl(var(--surface));
  border-radius: 3px;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, hsl(var(--border)), hsl(var(--muted-foreground)));
  border-radius: 3px;
  border: 1px solid hsl(var(--border));
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(180deg, hsl(var(--primary)), hsl(var(--accent)));
  box-shadow: 0 0 4px hsl(var(--primary) / 0.2);
}

/* ========== SCROLLBAR UTILITIES ========== */
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.scrollbar-hide::-webkit-scrollbar {
  display: none;
}

/* ========== SUBTLE GLASS MORPHISM SYSTEM ========== */
.glass {
  background: hsla(0, 0%, 100%, 0.7);
  backdrop-filter: blur(8px) saturate(120%);
  -webkit-backdrop-filter: blur(8px) saturate(120%);
  border: 1px solid hsla(0, 0%, 100%, 0.15);
  box-shadow: 
    0 4px 16px 0 rgba(0, 0, 0, 0.08),
    inset 0 1px 0 hsla(0, 0%, 100%, 0.1);
}

.glass-strong {
  background: hsla(0, 0%, 100%, 0.8);
  backdrop-filter: blur(12px) saturate(120%);
  -webkit-backdrop-filter: blur(12px) saturate(120%);
  border: 1px solid hsla(0, 0%, 100%, 0.2);
  box-shadow: 
    0 12px 32px -8px rgba(0, 0, 0, 0.15),
    inset 0 1px 0 hsla(0, 0%, 100%, 0.15);
}

.glass-card {
  background: hsla(0, 0%, 100%, 0.75);
  backdrop-filter: blur(10px) saturate(120%);
  -webkit-backdrop-filter: blur(10px) saturate(120%);
  border: 1px solid hsla(0, 0%, 100%, 0.18);
  box-shadow: 
    0 8px 24px 0 rgba(0, 0, 0, 0.12),
    inset 0 1px 0 hsla(0, 0%, 100%, 0.12);
  transition: all 0.2s ease;
}

.glass-card:hover {
  background: hsla(0, 0%, 100%, 0.8);
  border-color: hsla(0, 0%, 100%, 0.22);
  box-shadow: 
    0 12px 32px 0 rgba(0, 0, 0, 0.16),
    inset 0 1px 0 hsla(0, 0%, 100%, 0.15);
  transform: translateY(-1px);
}

/* Dark mode glass effects */
.dark .glass {
  background: hsla(220, 15%, 15%, 0.6);
  border: 1px solid hsla(220, 15%, 30%, 0.15);
  box-shadow: 
    0 4px 16px 0 rgba(0, 0, 0, 0.2),
    inset 0 1px 0 hsla(0, 0%, 100%, 0.05);
}

.dark .glass-strong {
  background: hsla(220, 15%, 18%, 0.7);
  border: 1px solid hsla(220, 15%, 30%, 0.2);
  box-shadow: 
    0 12px 32px -8px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 hsla(0, 0%, 100%, 0.08);
}

.dark .glass-card {
  background: hsla(220, 15%, 16%, 0.65);
  border: 1px solid hsla(220, 15%, 30%, 0.18);
  box-shadow: 
    0 8px 24px 0 rgba(0, 0, 0, 0.25),
    inset 0 1px 0 hsla(0, 0%, 100%, 0.06);
}

.dark .glass-card:hover {
  background: hsla(220, 15%, 18%, 0.7);
  border-color: hsla(220, 15%, 35%, 0.22);
  box-shadow: 
    0 12px 32px 0 rgba(0, 0, 0, 0.3),
    inset 0 1px 0 hsla(0, 0%, 100%, 0.08);
}

/* ========== BUTTON STYLES ========== */
.btn-glass {
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(6px);
  -webkit-backdrop-filter: blur(6px);
  border: 1px solid hsla(0, 0%, 100%, 0.2);
  transition: all 0.2s ease;
  background: linear-gradient(135deg, hsla(0, 0%, 100%, 0.1), hsla(0, 0%, 100%, 0.05));
}

.btn-glass::before {
  content: '';
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity 0.2s ease;
  background: linear-gradient(135deg, hsla(0, 0%, 100%, 0.15), hsla(0, 0%, 100%, 0.08));
}

.btn-glass:hover::before {
  opacity: 0.6;
}

/* ========== GRADIENT TEXT EFFECTS ========== */
.gradient-text {
  background: linear-gradient(135deg, hsl(var(--primary)), hsl(var(--accent)));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.gradient-text-rainbow {
  background: linear-gradient(90deg, 
    hsl(var(--primary)),
    hsl(var(--accent)),
    hsl(var(--warning)),
    hsl(var(--primary))
  );
  background-size: 200% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: rainbow 3s ease-in-out infinite;
}

@keyframes rainbow {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

/* ========== FOCUS MANAGEMENT ========== */
.focus-ring {
  outline: 2px solid hsl(var(--primary));
  outline-offset: 2px;
  transition: all 0.2s ease;
}

.focus-ring-accent {
  outline: 2px solid hsl(var(--accent));
  outline-offset: 2px;
  transition: all 0.2s ease;
}

/* ========== LOADING SHIMMER EFFECT ========== */
.shimmer {
  background: linear-gradient(
    90deg,
    hsla(0, 0%, 100%, 0) 0%,
    hsla(0, 0%, 100%, 0.15) 20%,
    hsla(0, 0%, 100%, 0.3) 60%,
    hsla(0, 0%, 100%, 0) 100%
  );
  background-size: 200% 100%;
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* ========== SELECTION STYLES ========== */
::selection {
  background: hsl(var(--primary) / 0.2);
  color: hsl(var(--text-primary));
}

::-moz-selection {
  background: hsl(var(--primary) / 0.2);
  color: hsl(var(--text-primary));
}

/* ========== UTILITY CLASSES ========== */
.text-gradient {
  background: linear-gradient(135deg, hsl(var(--primary)), hsl(var(--accent)));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.border-gradient {
  border-image: linear-gradient(135deg, hsl(var(--primary)), hsl(var(--accent))) 1;
}

.shadow-glow-primary {
  box-shadow: 0 0 12px hsl(var(--primary) / 0.2), 0 0 24px hsl(var(--primary) / 0.06);
}

.shadow-glow-accent {
  box-shadow: 0 0 12px hsl(var(--accent) / 0.2), 0 0 24px hsl(var(--accent) / 0.06);
}

.shadow-glass-hover {
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.dark .shadow-glass-hover {
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
}

/* ========== RESPONSIVE DESIGN HELPERS ========== */
@media (max-width: 640px) {
  html {
    font-size: 14px;
  }
  
  /* Reduce glass effect intensity on mobile */
  .glass-card {
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    background: hsl(var(--surface));
    border: 1px solid hsl(var(--border));
  }
  
  .dark .glass-card {
    background: hsl(var(--surface));
    border: 1px solid hsl(var(--border));
  }
}

@media (min-width: 1920px) {
  html {
    font-size: 17px;
  }
}

/* ========== REDUCED MOTION SUPPORT ========== */
@media (prefers-reduced-motion: reduce) {
  *, *::before, *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
  
  .glass-card:hover {
    transform: none;
  }
}